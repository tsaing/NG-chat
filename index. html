<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>即時通訊軟體 - NG-Chat</title>
    <!-- Firebase SDKs -->
    <script type="module">
        // Import the functions you need from the SDKs you need
        import { initializeApp } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-app.js";
        import { getAnalytics } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-analytics.js";
        import { getDatabase, ref, push, onValue, remove, query, limitToFirst, orderByChild } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-database.js";

        // Your web app's Firebase configuration
        const firebaseConfig = {
            apiKey: "AIzaSyCikm3n5wtQiTMmVMWwyb-AeSfzsy9H1dI",
            authDomain: "ng-chat-bb271.firebaseapp.com",
            projectId: "ng-chat-bb271",
            storageBucket: "ng-chat-bb271.firebasestorage.app",
            messagingSenderId: "11581831126",
            appId: "1:11581831126:web:3a0e438390144fb5675677",
            measurementId: "G-JRQFBLDJT1"
        };

        // Initialize Firebase
        const app = initializeApp(firebaseConfig);
        const analytics = getAnalytics(app); // Google Analytics initialized
        const database = getDatabase(app); // Realtime Database initialized
        const messagesRef = ref(database, 'chat_messages'); // Reference to our chat messages in RTDB

        let currentUsername = '';
        const MESSAGE_LIMIT = 30; // 最多儲存的訊息數量

        // --- HTML 元素參考 ---
        const loginScreen = document.getElementById('login-screen');
        const chatScreen = document.getElementById('chat-screen');
        const passwordInput = document.getElementById('password-input');
        const passwordSubmitBtn = document.getElementById('password-submit-btn');
        const usernameContainer = document.getElementById('username-container');
        const usernameInput = document.getElementById('username-input');
        const usernameSubmitBtn = document.getElementById('username-submit-btn');
        const chatMessages = document.getElementById('chat-messages');
        const messageInput = document.getElementById('message-input');
        const sendButton = document.getElementById('send-button');
        const currentUserDisplay = document.getElementById('current-user-display');

        // --- 登入流程 ---
        passwordSubmitBtn.addEventListener('click', () => {
            if (passwordInput.value === '230189487') {
                passwordInput.disabled = true;
                passwordSubmitBtn.disabled = true;
                usernameContainer.style.display = 'block';
                usernameInput.focus();
            } else {
                alert('密碼錯誤，請重新輸入！');
                passwordInput.value = '';
            }
        });

        usernameSubmitBtn.addEventListener('click', () => {
            const username = usernameInput.value.trim();
            if (username) {
                currentUsername = username;
                sessionStorage.setItem('chat_username', currentUsername); // 儲存使用者名稱
                loginScreen.style.display = 'none';
                chatScreen.style.display = 'flex';
                currentUserDisplay.textContent = `當前使用者: ${currentUsername}`;
                messageInput.focus();
                setupChatListener(); // 成功登入後啟動聊天監聽
            } else {
                alert('請輸入您的使用者名稱！');
            }
        });

        // 檢查是否有儲存的使用者名稱，如果有的話直接進入聊天介面
        window.addEventListener('load', () => {
            const storedUsername = sessionStorage.getItem('chat_username');
            if (storedUsername) {
                currentUsername = storedUsername;
                loginScreen.style.display = 'none';
                chatScreen.style.display = 'flex';
                currentUserDisplay.textContent = `當前使用者: ${currentUsername}`;
                setupChatListener();
                messageInput.focus();
            } else {
                loginScreen.style.display = 'flex';
                passwordInput.focus();
            }
        });

        // --- 聊天功能 ---
        sendButton.addEventListener('click', sendMessage);
        messageInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });

        async function sendMessage() {
            const messageText = messageInput.value.trim();
            if (messageText && currentUsername) {
                const newMessage = {
                    username: currentUsername,
                    text: messageText,
                    timestamp: Date.now() // 使用客戶端時間戳
                };

                await push(messagesRef, newMessage); // 推送新訊息

                // 檢查並刪除超出的舊訊息
                const snapshot = await query(messagesRef, orderByChild('timestamp')).once('value');
                if (snapshot.exists()) {
                    const messages = snapshot.val();
                    const messageKeys = Object.keys(messages);

                    if (messageKeys.length > MESSAGE_LIMIT) {
                        // 依照時間戳排序，取得最舊的訊息鍵
                        const sortedMessageKeys = Object.entries(messages)
                            .sort(([, a], [, b]) => a.timestamp - b.timestamp)
                            .map(([key]) => key);

                        const keysToDelete = sortedMessageKeys.slice(0, messageKeys.length - MESSAGE_LIMIT);
                        keysToDelete.forEach(key => {
                            remove(ref(database, `chat_messages/${key}`));
                        });
                    }
                }
                messageInput.value = ''; // 清空輸入框
            }
        }

        // 監聽 Realtime Database 訊息變動
        function setupChatListener() {
            onValue(query(messagesRef, orderByChild('timestamp')), (snapshot) => {
                chatMessages.innerHTML = ''; // 清空聊天紀錄
                const messagesData = snapshot.val();
                if (messagesData) {
                    // 將訊息轉換為陣列並按時間戳排序
                    const sortedMessages = Object.values(messagesData).sort((a, b) => a.timestamp - b.timestamp);

                    // 只顯示最新的 MESSAGE_LIMIT 條訊息
                    const displayMessages = sortedMessages.slice(-MESSAGE_LIMIT);

                    displayMessages.forEach(msg => {
                        const messageElement = document.createElement('div');
                        messageElement.classList.add('message-item');
                        const date = new Date(msg.timestamp);
                        const timeString = `${date.getHours().toString().padStart(2, '0')}:${date.getMinutes().toString().padStart(2, '0')}:${date.getSeconds().toString().padStart(2, '0')}`;
                        messageElement.innerHTML = `
                            <span class="message-time">[${timeString}]</span>
                            <span class="message-username">${msg.username}:</span>
                            <span class="message-text">${msg.text}</span>
                        `;
                        chatMessages.appendChild(messageElement);
                    });
                    // 捲動到底部
                    chatMessages.scrollTop = chatMessages.scrollHeight;
                }
            });
        }
    </script>
