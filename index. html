                <input type="text" id="username-input" placeholder="請輸入使用者名稱">
                <button id="username-submit-btn">進入聊天室</button>
            </div>
        </div>

        <!-- 聊天室頁面 -->
        <div id="chat-screen" style="display: none;">
            <h1>NG-Chat 聊天室</h1>
